@page "/login"

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <title>Página de Login</title>
    <!-- Importando o CSS externo -->
    <link rel="stylesheet" href="css/styles.css" />

    <!-- Font Awesome (se precisar de ícones) -->
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-d1vR0rZLIY8w8GWFN+j6gqDp0AK7jzXMeYQj+kU4j3iC1T9E6buQw3HL6RNfNeZTvC2PHFZ0L1EU6j2lW6nZow=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    />
</head>
<body>
<!-- Container para centralizar o card (em vez de usar flex no body) -->
<div class="login-container">
    <!-- Card de login -->
    <div class="login-card">
        <!-- Imagem de topo -->
        <div class="card-header"></div>

        <!-- Corpo do card: formulário -->
        <div class="card-body">
            <h2>Login</h2>
            <form>
                <div class="input-group">
                    <span class="input-icon">
                        <i class="fas fa-user"></i>
                    </span>
                    <input type="text" placeholder="Username" />
                </div>

                <div class="input-group">
                    <span class="input-icon">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input type="password" placeholder="Password" />
                </div>

                <div class="options">
                    <div>
                        <input type="checkbox" id="remember" />
                        <label for="remember">Lembrar-me</label>
                    </div>
                    <a href="#">Esqueceu a senha?</a>
                </div>

                <button type="submit" class="login-button">Entrar</button>

                <div class="create-account">
                    <a href="#">Criar Conta</a>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>