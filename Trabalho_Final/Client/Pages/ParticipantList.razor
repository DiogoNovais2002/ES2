@page "/ParcipantList"
@using Client.Services
@inject ApiService ApiService

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold display-6">üë• Lista de Participantes</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Participantes Registados</h4>

            @if (participants == null)
            {
                <div class="alert alert-secondary" role="alert">
                    ‚è≥ A carregar participantes...
                </div>
            }
            else if (!participants.Any())
            {
                <div class="alert alert-warning" role="alert">
                    ‚ö†Ô∏è Nenhum participante encontrado.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in participants)
                        {
                            <tr>
                                <td>@p.Name</td>
                                <td>@p.Email</td>
                                <td>@p.PhoneNumber</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<ApiService.UserDto>? participants;

    protected override async Task OnInitializedAsync()
    {
        participants = await ApiService.GetParticipantsAsync();
    }
}
