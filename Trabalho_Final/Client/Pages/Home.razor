@page "/"
@inject ApiService ApiService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<h3>Mensagem da API:</h3>
<p>@message</p>

@code {
    private string message = "A carregar...";

    protected override async Task OnInitializedAsync()
    {
        message = await ApiService.GetMessageAsync();
    }
}